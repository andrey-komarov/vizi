<?xml
    version="1.0"
    encoding="WINDOWS-1251"
?>

<!--
    "MergeSort" visualizer configuration (example).
-->

<configuration>
    <property
        description = "Display edit mode button"
        param       = "editMode-button-visibility"
        value       = "true"
    />
    <property
        description = "Display stack checkBox"
        param       = "stack-checkBox-visibility"
        value       = "true"
    />
    <property
        description = "Comment pane height"
        param       = "comment-height"
        value       = "60"
    />
    <property
        description = "Maximal possible value of the element"
        param       = "max-value"
        value       = "99"
    />
    <property
        description = "Widest possible value of the element"
        param       = "max-value-string"
        value       = "88"
    />                 
    <property
        description = "Width of holes between array elements (in percents)"
        param       = "hole-width"
        value       = "30"
    />
    <property
        description = "Height of horisontal brackets"
        param       = "bracket-height"
        value       = "4"
    />
    <property
        description = "Minimal height of messages"
        param       = "minimal-text-height"
        value       = "20"
    />
    <property
        description = "Stack width (in percents)"
        param       = "stack-width"
        value       = "20"
    />
    <property
        description = "Main area top indent"
        param       = "top-indent"
        value       = "10"
    />
    <property
        description = "Main area bottom indent"
        param       = "bottom-indent"
        value       = "10"
    />
    <property
        description = "Main area left indent"
        param       = "left-indent"
        value       = "10"
    />
    <property
        description = "Main area right indent"
        param       = "right-indent"
        value       = "10"
    />
    <property
        description = "Stack area top indent"
        param       = "top-stack-indent"
        value       = "10"
    />
    <property
        description = "Stack area bottom indent"
        param       = "bottom-stack-indent"
        value       = "10"
    />
    <property
        description = "Stack area left indent"
        param       = "left-stack-indent"
        value       = "10"
    />
    <property
        description = "Stack area right indent"
        param       = "right-stack-indent"
        value       = "10"
    />
    <property
        description = "Minimal width of first and second array messages"
        param       = "minimal-aux-arrays-text-width"
        value       = "70"
    />
    <property
        description = "Minimal width of stack message"
        param       = "minimal-stack-text-width"
        value       = "70"
    />
    <adjustablePanel
        description     = "Number of elements in the array"
        param           = "elements"
        caption-ru      = "Элементов: {0,number,####}"
        caption-en      = "Elements: {0,number,####}"
        hint-ru         = "Количество элементов в массиве"
        hint-en         = "Number of elements in the array"
        value           = "8"
        minimum         = "4"
        maximum         = "20"
        unitIncrement   = "1"
        blockIncrement  = "3"
        blockInterval   = "300"
    >
        <button
            description = "Increase number of elements in array"
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить количество элементов"
            hint-en     = "Increase number of elements"
        />
        <button
            description = "Decrease number of elements in array"
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить количество элементов"
            hint-en     = "Decrease number of elements"
        />
    </adjustablePanel>
    <button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Заполнить массив случайными значениями"
        hint-en     = "Fill the array with random values"
    />
    <button
        description = "Start edit mode"
        param       = "button-startEditMode"
        caption-ru  = "Редактировать"
        caption-en  = "\u00a0Edit "
        hint-ru     = "Войти в режим редактирования элементов сортируемого массива"
        hint-en     = "Start edit mode of elements of sorting array"
    />
    <button
        description = "Stop edit mode"
        param       = "button-stopEditMode"
        caption-ru  = "\u00a0 Применить  "
        caption-en  = "Apply"
        hint-ru     = "Выйти из режима редактирования элементов сортируемого массива"
        hint-en     = "Stop edit mode of elements of sorting array"
    />
    <styleset
        description = "Main array style set"
        param       = "main-array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "ffffff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Cell of left part of array"
            fill-color      = "e0e0e0"
        />
        <style
            description     = "Cell of right part of array"
            fill-color      = "b0b0b0"
        />
        <style
            description     = "Cell needed to be sorted"
            fill-color      = "c8c8c8"
        />
        <style
            description     = "Cell of sorted part of array"
            fill-color      = "e0e0e0"
        />
        <style
            description     = "Being sorted cell"
            fill-color      = "e0e0e0"
        />
        <style
            description     = "Current (copied) cell"
            fill-color      = "b0b0b0"
            text-color      = "000000"
        />
        <style
            description     = "Uninteresting cell"
            fill-color      = "ffffff"
        />
        <style
            description     = "Non-copied cell"
            fill-color      = "e0e0e0"
            text-color      = "e0e0e0"
        />
        <style
            description     = "Total array is sorted"
            fill-color      = "e0e0e0"
        />
        <style
            description     = "White (empty) cell"
            fill-color      = "FFFFFF"
            border-color    = "FFFFFF"
            text-color      = "FFFFFF"
        />
    </styleset>
    <styleset
        description = "Auxiliary arrays style set"
        param       = "aux-arrays"
    >
        <style
            description     = "Non-checked (ordinary) cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "ffffff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Checked (uninteresting) cell"
            fill-color      = "ffffff"
            text-color      = "ffffff"
        />
        <style
            description     = "Current (copied) cell"
            fill-color      = "d0d0d0"
        />
        <style
            description     = "Local-minimum cell"
            fill-color      = "a0a0a0"
        />
        <style
            description     = "White (empty) cell"
            fill-color      = "FFFFFF"
            border-color    = "FFFFFF"
            text-color      = "FFFFFF"
        />
    </styleset>
    <styleset
        description = "Borders style set"
        param       = "border-arrays"
    >
        <style
            description     = "Empty cell"
            text-color      = "FFFFFF"
            text-align      = "0.5"
            border-color    = "FFFFFF"
            border-status   = "true"
            fill-color      = "FFFFFF"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Shown cell"
            fill-color      = "ffffff"
            text-color      = "000000"
            border-color    = "000000"
        />
        <style
            description     = "Current (active) cell"
            fill-color      = "c0c0c0"
            text-color      = "000000"
            border-color    = "000000"
        />
    </styleset>
    <styleset
        description = "Brackets style set"
        param       = "horisontal-brackets"
    >
        <style
            description     = "Invisible bracket"
            text-color      = "FFFFFF"
            text-align      = "0.5"
            border-color    = "FFFFFF"
            border-status   = "true"
            fill-color      = "FFFFFF"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Ordinary bracket"
            text-color      = "b0b0b0"
        />
        <style
            description     = "Active bracket"
            text-color      = "000000"
        />
    </styleset>
    <style
        description     = "Style of stack message"
        param           = "stack-message-style"
        border-status   = "false"
        fill-status     = "false"
    >
    </style>
    <style
        description     = "Style of array message"
        param           = "array-message-style"
        border-status   = "false"
        fill-status     = "false"
    >
    </style>
    <style
        description     = "Style of edit mode message"
        param           = "editMode-message-style"
        border-status   = "false"
        fill-status     = "false"
    >
    </style>
    <message
        description = "Stack message"
        param       = "stack-message"
        message-ru  = "Границы\nсортируемых\nмассивов"
        message-en  = "Stack"
    />
    <message
        description = "First array message"
        param       = "first-array-message"
        message-ru  = "Первый массив"
        message-en  = "First array"
    />
    <message
        description = "Second array message"
        param       = "second-array-message"
        message-ru  = "Второй массив"
        message-en  = "Second array"
    />
    <message
        description = 'Comment for "ArrayLength" parameter in the output file'
        param       = "ArrayLengthComment"
        message-ru  = "Длина массива ({0} ... {1})"
        message-en  = "Array length ({0} ... {1})"
    />
    <message
        description = 'Comment for "Elements" parameter in the output file'
        param       = "ElementsComment"
        message-ru  = "Элементы массива ({0} ... {1})"
        message-en  = "Array elements ({0} ... {1})"
    />
    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />
    <message
        description = "Edit mode message"
        param       = "editMode-message"
        message-ru  = "Режим редактирования"
        message-en  = "Edit mode"
    />
    <message
        description = "CheckBox (with Stack) message"
        param       = "checkBox-message"
        message-ru  = "Стек"
        message-en  = "Stack"
    />
    <group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "3"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "50"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "7"
        />
    </group>
</configuration>
