<?xml version="1.0" encoding="WINDOWS-1251"?>

<!--
    "QuickSort" visualizer configuration (example).
    Version: $Id: QuickSort-Configuration.xml,v 1.3 2011/01/23 11:01:05 geo Exp $
-->

<configuration>
    <property
        description     = "Comment pane height"
        param           = "comment-height"
        value           = "60"
    />
    <adjustablePanel
        description     = "Number of elements in the array"
        param           = "elements"
        caption-ru      = "Элементов: {0,number,####}"
        caption-en      = "Elements: {0,number,####}"
        hint-ru         = "Количество элементов в массиве"
        hint-en         = "Number of elements in the array"
        value           = "8"
        minimum         = "5"
        maximum         = "13"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "500"
    >	
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить количество элементов"
            hint-en     = "Increase number of elements"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить количество элементов"
            hint-en     = "Decrease number of elements"
        />
    </adjustablePanel>
    <button
        description     = "Fills the array with random values"
        param           = "button-random"
        caption-ru      = "Случайно"
        caption-en      = "Random"
        hint-ru         = "Заполнить массив случайными числами"
        hint-en         = "Fill the array with random values"
    />
    <message
        description = 'Message for the "bar" label'
        param       = "bar-message"
        message-ru  = "Барьер = {0}"
        message-en  = "Barrier = {0}"
    />
	<message
        description = 'Borders message'
        param       = 'borders-message'
        message-ru  = 'Границы сортируемых частей'
        message-en  = 'Borders of sorting parts'
    />
	 <message
        description = 'Comment for "ArrayLength" parameter in the output file'
        param       = "ArrayLengthComment"
        message-ru  = "Длина массива ({0} ... {1})"
        message-en  = "Array length ({0} ... {1})"
    />
    <message
        description = 'Comment for "Elements" parameter in the output file'
        param       = "ElementsComment"
        message-ru  = "Элементы массива ({0} ... {1})"
        message-en  = "Array elements ({0} ... {1})"
    />
    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />
	<style
        description     = 'Style of the "bar" label'
        param           = "bar-style"
        border-status   = "false"
        fill-status     = "false"
    >
        <font 
			size="20"
			style="bold"
		/>
    </style>
	<style
        description     = 'Style of the "Bord" label'
        param           = "borders-style"
        border-status   = "false"
        fill-status     = "false"
    >
        <font
			style = "bold"
		/>
    </style> 
	
    <property
        description     = "Max possible value of the element"
        param           = "max-value"
        value           = "99"
    />
    <property
        description     = "Widest possible value of the element"
        param           = "max-value-string"
        value           = "88"
    />
	<group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "2"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "40"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "7"
        />
    </group>
    <styleset
        description = "Array style set"
        param       = "array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Selected cell"
            fill-color      = "80ff80"
        />
        <style
            description     = "fixed cell"
            fill-color      = "ff8080"
        />
		<style
            description     = "non-used cell"
            fill-color      = "666666"
        />
		<style
            description     = "index"
            fill-color      = "FFFFFF"
        />
    </styleset>
    <styleset
        description = "Array style set"
        param       = "array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Selected cell"
            fill-color      = "80ff80"
        />
        <style
            description     = "fixed cell"
            fill-color      = "ff8080"
        />
		<style
            description     = "non-used cell"
            fill-color      = "666666"
        />
		<style
            description     = "index"
            fill-color      = "FFFFFF"
        />
    </styleset>
    <styleset
        description = "Array style set"
        param       = "array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Selected cell"
            fill-color      = "80ff80"
        />
        <style
            description     = "fixed cell"
            fill-color      = "ff8080"
        />
		<style
            description     = "non-used cell"
            fill-color      = "666666"
        />
		<style
            description     = "index"
            fill-color      = "FFFFFF"
        />
    </styleset>
    <styleset
        description = "Index style set"
        param       = "indexes"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "false"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Selected cell"
            fill-color      = "80ff80"
        />
        <style
            description     = "fixed cell"
            fill-color      = "ff8080"
        />
		<style
            description     = "non-used cell"
            fill-color      = "666666"
        />
		<style
            description     = "index"
            fill-color      = "FFFFFF"
        />
    </styleset>

</configuration>