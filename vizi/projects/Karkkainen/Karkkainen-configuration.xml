<?xml version="1.0" encoding="WINDOWS-1251"?>


<configuration>
    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "60"
    />
    <adjustablePanel
        description = "Number of elements in the array"
        param           = "elements"
        caption-ru      = "Элементов: {0,number,####}"
        caption-en      = "Elements: {0,number,####}"
        hint-ru         = "Количество элементов в массиве"
        hint-en         = "Number of elements in the array"
        value           = "7"
        minimum         = "3"
        maximum         = "12"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "1000"
    >
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить количество элементов"
            hint-en     = "Increase number of elements"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить количество элементов"
            hint-en     = "Decrease number of elements"
        />
    </adjustablePanel>
    <button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Заполнить массив случайными значениями"
        hint-en     = "Fill the array with random values"
    />
    <message
        description = 'Comment for "String" parameter in the output file'
        param       = "StringComment"
        message-ru  = "Строка ('a' ... 'z'), длина {0} ... {1} "
        message-en  = "String ('a' ... 'z'), length {0} ... {1}"
    />
    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />
    <message
        description = 'Comment for OutOfBounds Exception'
        param       = "OutOfBoundsComment"
        message-ru  = "Недопустимая длина строки"
        message-en  = "String length is out of bounds"
    />
    <message
        description = 'Comment for Incorrect Character Exception'
        param       = "WrongCharacterComment"
        message-ru  = "Недопустимый символ в строке на позиции {0}: ''{1}''"
        message-en  = "String contains incorrect symbol at position {0}: ''{1}''"
    />

    <styleset
        description = "Array style set"
        param       = "array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "FFFFFF"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "15"
                style       = "plain"
            />
        </style>
        <style
            description     = "0 - type cell"
            fill-color      = "EEEEEE"
        />
        <style
            description     = "1 - type cell"
            fill-color      = "EEEEEE"
        />
        <style
            description     = "2 - type cell"
            fill-color      = "EEEEEE"
        />
        <style
            description     = "Single - pointer"
            fill-color      = "CCCCCC"
        />
        <style
            description     = "First pair - pointer"
            fill-color      = "AAAAAA"
        />
        <style
            description     = "Second pair - pointer"
            fill-color      = "888888"
        />
    </styleset>
    <group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "2"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "40"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "7"
        />
    </group>
</configuration>
