<?xml version="1.0" encoding="WINDOWS-1251"?>

<!--
    "HeapSort" visualizer configuration.
    Shared for HeapSort.xml
    Version: $Id: HeapSort-Configuration.xml,v 0.1 2004/04/24 23:12:47 mar Exp $
-->

<configuration>
    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "60"
    />
    <property
        description = "Enable edit mode button"
        param       = "button-ShowEditMode"
        value       = "true"
    />
    <adjustablePanel
        description = "Number of elements in the array"
        param           = "elements"
        caption-ru      = "Элементов: {0,number,####}"
        caption-en      = "Elements: {0,number,####}"
        hint-ru         = "Количество элементов в массиве"
        hint-en         = "Number of elements in the array"
        value           = "15"
        minimum         = "7"
        maximum         = "15"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "500"
    >
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить количество элементов"
            hint-en     = "Increase number of elements"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить количество элементов"
            hint-en     = "Decrease number of elements"
        />
    </adjustablePanel>
    <button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Заполнить массив случайными значениями"
        hint-en     = "Fill the array with random values"
    />
    <button
        description = "Start edit mode"
        param       = "button-startEditMode"
        caption-ru  = "Редактировать"
        caption-en  = "Edit  "
        hint-ru     = "Войти в режим редактирования элементов сортируемого массива"
        hint-en     = "Start edit mode of elements of sorting array"
    />
    <button
        description = "Stop edit mode"
        param       = "button-stopEditMode"
        caption-ru  = "Применить"
        caption-en  = "Apply"
        hint-ru     = "Выйти из режима редактирования элементов сортируемого массива"
        hint-en     = "Stop edit mode of elements of sorting array"
    />
    <message
        description = 'Comment for "ArrayLength" parameter in the output file'
        param       = "ArrayLengthComment"
        message-ru  = "Длина массива ({0} ... {1})"
        message-en  = "Array length ({0} ... {1})"
    />
    <message
        description = 'Comment for "Elements" parameter in the output file'
        param       = "ElementsComment"
        message-ru  = "Элементы массива ({0} ... {1})"
        message-en  = "Array elements ({0} ... {1})"
    />
    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />
    <message
        description = "Edit mode message"
        param       = "editMode-message"
        message-ru  = "Режим редактирования"
        message-en  = "Edit mode"
    />
    <styleset
        description = "Array style set"
        param       = "array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "ffffff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Selected cell"
            fill-color      = "cccccc"
        />
        <style
            description     = "Operated cell"
            fill-color      = "aaaaaa"
        />
        <style
            description     = "Cutted cell"
            fill-color      = "888888"
        />
        <style
            description     = "Nums Message"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "ffffff"
            border-status   = "false"
            fill-color      = "ffffff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "8"
                style       = "plain"
            />
        </style>
    </styleset>
    <property
        description = "Maximum possible value of the element"
        param       = "max-value"
        value       = "99"
    />
    <property
        description = "Widest possible value of the element"
        param       = "max-value-string"
        value       = "88"
    />
    <group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "2"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "40"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "7"
        />
    </group>
</configuration>
