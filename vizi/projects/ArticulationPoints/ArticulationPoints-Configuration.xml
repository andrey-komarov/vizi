<?xml version="1.0" encoding="WINDOWS-1251"?>

<configuration>
    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "60"
	/>
    <property
        description = "Enable edit mode button"
        param       = "button-ShowEditMode"
        value       = "true"
    />
    <adjustablePanel
        description	= "Number of vertices"
        param          = "elements"
        caption-ru     = "Элементов: {0,number,####}"
        caption-en     = "Elements: {0,number,####}"
        hint-ru        = "Количество вершин"
        hint-en        = "Number of vertices"
        value          = "10"
        minimum        = "5"
        maximum        = "12"
		unitIncrement  = "1"
		blockIncrement = "2"
		blockInterval  = "500"
    >
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить количество вершин"
            hint-en     = "Increase number of vertices"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить количество вершин"
            hint-en     = "Decrease number of vertices"
        />
    </adjustablePanel>
    <button
        description = "Generates random graph"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Создать случайный граф"
        hint-en     = "Generates random graph"
    />
    <button
        description = "Start edit mode"
        param       = "button-startEditMode"
        caption-ru  = "Редактировать"
        caption-en  = "\u00A0Edit "
        hint-ru     = "Войти в режим редактирования элементов сортируемого массива"
        hint-en     = "Start edit mode of elements of sorting array"
    />
    <button
        description = "Stop edit mode"
        param       = "button-stopEditMode"
        caption-ru  = "\u00A0 Применить  "
        caption-en  = "Apply"
        hint-ru     = "Выйти из режима редактирования элементов сортируемого массива"
        hint-en     = "Stop edit mode of elements of sorting array"
    />
    <message
        description = 'Comment for "NumberOfVertices" parameter in the output file'
        param       = "NumberOfVerticesComment"
        message-ru  = "Количество вершин ({0} ... {1})"
        message-en  = "Number of vertices ({0} ... {1})"
    />
    <message
        description = 'Comment for "AdjacencyMatrix" parameter in the output file'
        param       = "AdjacencyMatrixComment"
        message-ru  = "Матрица смежности (0, 1, x)"
        message-en  = "Adjacency Matrix (0, 1, x)"
    />
    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />
    <styleset
        description = "Graph style set"
        param       = "graph"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8a8a8a"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "activeVertex"
            fill-color      = "bfbfbf"
        />
		<style
			description		= "vertexInDFT"
			fill-color      = "ffffff"
		/>
		<style
			description		= "Edge"
			fill-color      = "cfcfcf"
		/>
		<style
			description		= "EdgeInDFT"
			fill-color      = "000000"
		/>
		<style
			description		= "currentVertex"
			fill-color      = "707070"
		/>
		<style
			description		= "articulationPoint"
			fill-color      = "eaeaea"
		/>
		<style
			description		= "activeEdge"
			fill-color      = "7f7f7f"
		/>
		<style
			description		= "bridge"
			fill-color      = "000000"
		/>
		<style
			description		= "aMatrixNet"
			fill-color      = "505050"
		/>
		<style
			description		= "backEdge"
			fill-color      = "9f9f9f"
		/>
    </styleset>
    <group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "2"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "40"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "20"
        />
    </group>
</configuration>
