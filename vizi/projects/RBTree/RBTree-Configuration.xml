<?xml version="1.0" encoding="WINDOWS-1251"?>

<configuration>

    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "0"
    />
    <property
        description = "My comment height difference between ordinary/edit modes"
        param = "my-comment-height-difference"
        value = "30"
    />
    <property
        description = "My comment pane height"
        param = "my-comment-height"
        value = "65"
    />
    <property
        description = "My comment foreground"
        param = "my-comment-foreground"
        value = "000000"
    />
    <property
        description = "My comment background"
        param = "my-comment-background"
        value = "c0c0c0"
    />
    <font
        description = "My comment face"
        param = "my-comment-font"
        face = "Serif"
        size = "12"
        style = "plain"
    />
    <property
        description = "Угол у стрелки (в радианах)"
        param = "pointer-angle"
        value = "0.8"
    />
    <property
        description = "Длина стелки"
        param = "pointer-length"
        value = "0.035"
    />
    <property
        description = "Диаметр обыкновенной вершины"
        param = "ordinary-diameter"
        value = "0.1"
    />
    <property
        description = "Радиус обыкновенной вершины"
        param = "ordinary-radius"
        value = "0.05"
    />
    <property
        description = "Размер выделения вершины"
        param = "size-marked-node"
        value = "0.001"
    />
    <property
        description = "Размеры кнопок увеличения/уменьшения/удаления"
        param = "button-size"
        value = "0.07"
    />
    <styleset
        description = "Tree style set"
        param = "tree"
    >
        <style
            description = "Черная вершина"
            text-color = "000000"
            text-align = "0.5"
            border-color = "000000"
            border-status = "true"
            fill-color = "ffffff"
            fill-status = "true"
            aspect = "1"
            aspect-status = "true"
            padding = "0.0"
        >
            <font
                face = "Serif"
                size = "12"
                style = "plain"
            />
        </style>
		<style
            description = "Красная вершина"
            text-color = "000000"
            text-align = "0.5"
            border-color = "000000"
            border-status = "true"
            fill-color = "ff0000"
            fill-status = "true"
            aspect = "1"
            aspect-status = "true"
            padding = "0.0"
        >
            <font
                face = "Serif"
                size = "12"
                style = "plain"
            />
        </style>
        <style
            description = "Обычное ребро"
            fill-color = "ffffff"
        >
            <font
                face = "Serif"
                size = "10"
                style = "plain"
            />
        </style>        

    </styleset>   
</configuration>
