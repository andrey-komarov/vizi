<?xml version="1.0" encoding="WINDOWS-1251"?>

<!--
    "QuickSort" visualizer configuration.
-->

<configuration>
    <property
        description = "Comment pane height"
        param       = "comment-height"
        value       = "60"
    />
    <adjustablePanel
        description = "Number of elements in the array"
        param       = "elements"
        caption-ru  = "Элементов: {0,number,####}"
        caption-en  = "Elements: {0,number,####}"
        hint-ru     = "Количество элементов в массиве"
        hint-en     = "Number of elements in the array"
        value       = "8"
        minimum     = "4"
        maximum     = "20"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "500"
    >
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить количество элементов"
            hint-en     = "Decrease number of elements"
        />
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить количество элементов"
            hint-en     = "Increase number of elements"
        />
    </adjustablePanel>
    <button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Заполнить массив случайными значениями"
        hint-en     = "Fill the array with random values"
    />
    <message
        description = 'Message for the "Bar" label'
        param       = "barier-message"
        message-ru  = "Барьер = {0}"
        message-en  = "Barrier = {0}"
    />
    <message
        description = 'Stack message'
        param       = 'stack-message'
        message-ru  = 'Границы сортируемых частей'
        message-en  = 'Borders of sorting parts'
    />
    <message
        description = 'Comment for "ArrayLength" parameter in the output file'
        param       = "ArrayLengthComment"
        message-ru  = "Длина массива ({0} ... {1})"
        message-en  = "Array length ({0} ... {1})"
    />
    <message
        description = 'Comment for "Elements" parameter in the output file'
        param       = "ElementsComment"
        message-ru  = "Элементы массива ({0} ... {1})"
        message-en  = "Array elements ({0} ... {1})"
    />
    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />
    <styleset
        description = "Array style set"
        param       = "array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "707070"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Selected array cell"
            fill-color      = "b0b0b0"
        />
        <style
            description     = "Element to swap cell"
            fill-color      = "e5e5e5"
            text-color      = "666666"
        />
        <style
            description     = "Sorted"
            fill-color      = "ffffff"
        />
        <style
            description     = "Empty"
            fill-color      = "ffffff"
            text-color      = "ffffff"
            border-color    = "ffffff"
        />
        <style
            description     = "Element to swap cell (active)"
            fill-color      = "e5e5e5"
            text-color      = "000000"
        />
    </styleset>
    <style
        description     = 'Style of the "Barier" label'
        param           = "barier-style"
        border-status   = "false"
        fill-status     = "false"
    >
        <font style="bold"/>
    </style>    
    <style
        description     = 'Style of the "Stack" label'
        param           = "stack-style"
        border-status   = "false"
        fill-status     = "false"
    >
        <font style="bold"/>
    </style>    
    <property
        description = "Maximum possible value of the element"
        param       = "max-value"
        value       = "99"
    />
    <property
        description = "Widest possible value of the element"
        param       = "max-value-string"
        value       = "88"
    />
    <group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "2"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "40"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "7"
        />
    </group>
</configuration>
