<?xml version="1.0" encoding="UTF-8"?>

<!--
    "FindMaximum" visualizer configuration (example).
    Shared for FindMaximum.xml and FindMaximumAR.xml
    Version: $Id: FindMaximum-Configuration.xml,v 1.2 2003/12/25 12:57:27 geo Exp $
-->

<configuration>
    <property
        description = "Widest possible value of the element"
        param       = "max-value-string"
        value       = "88"
    />

    <property
        description = "Maximum possible value of the element"
        param       = "max-value"
        value       = "99"
    />

    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "40"
    />

    <group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "2"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "40"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "7"
        />
    </group>

    <adjustablePanel
        description = "Number of elements in the array"
        param           = "elements"
        caption-ru      = "Элементов: {0,number,####}"
        caption-en      = "Elements: {0,number,####}"
        value           = "5"
        minimum         = "2"
        maximum         = "16"
        hint-ru         = "Количество элементов в массиве"
        hint-en         = "Number of elements in the array"
        blockIncrement  = "2"
        blockInterval   = "500"
        unitIncrement   = "1"
    >
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить количество элементов"
            hint-en     = "Increase number of elements"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить количество элементов"
            hint-en     = "Decrease number of elements"
        />
    </adjustablePanel>

    <adjustablePanel
        description 	= "Left border of the search"
        param           = "left-border"
        caption-ru      = "Левая граница: {0,number,####}"
        caption-en      = "Left border: {0,number,####}"
        hint-ru         = "Левая граница поиска"
        hint-en         = "Left border of the search"
        value           = "1"
        minimum         = "1"
        maximum         = "4"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "500"
    >
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить левую границу"
            hint-en     = "Increase left border"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить левую границу"
            hint-en     = "Decrease left border"
        />
    </adjustablePanel>

    <adjustablePanel
        description 	= "Right border of the search"
        param           = "right-border"
        caption-ru      = "Правая граница: {0,number,####}"
        caption-en      = "Right border: {0,number,####}"
        hint-ru         = "Правая граница поиска"
        hint-en         = "Right border of the search"
        value           = "4"
        minimum         = "1"
        maximum         = "5"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "500"
    >
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить правую границу"
            hint-en     = "Increase right border"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить правую границу"
            hint-en     = "Decrease right border"
        />
    </adjustablePanel>

    <button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Заполнить массив случайными значениями"
        hint-en     = "Fill the array with random values"
    />
    
    <button
        description = "Turns to edit mode"
        param       = "button-edit"
        caption-ru  = "Редактировать"
        caption-en  = "Edit"
        hint-ru     = "Перейти в режим редактирования"
        hint-en     = "Turn to edit mode"
    />

    <button
        description = "Turns to show mode"
        param       = "button-show"
        caption-ru  = "Визуализация"
        caption-en  = "Visualization"
        hint-ru     = "Перейти в режим визуализации"
        hint-en     = "Turn to show mode"
    />
    
    <message
        description = 'Message for the "Min" label'
        param       = "min-message"
        message-ru  = "min = {0}"
        message-en  = "min = {0}"
    />
    <message
        description = 'Message for the checkbox'
        param       = "checkbox-message"
        message-ru  = "Построение дерева"
        message-en  = "Building of the tree"
    />

    <message
        description = 'Comment for "ArrayLength" parameter in the output file'
        param       = "ArrayLengthComment"
        message-ru  = "Длина массива ({0} ... {1})"
        message-en  = "Array length ({0} ... {1})"
    />

    <message
        description = 'Comment for "LeftBorder" parameter in the output file'
        param       = "LeftBorderComment"
        message-ru  = "Левая граница поиска ({0} ... ArrayLength)"
        message-en  = "Left border of the search ({0} ... ArrayLength)"
    />
    <message
        description = 'Comment for "RightBorder" parameter in the output file'
        param       = "RightBorderComment"
        message-ru  = "Правая граница поиска ({0} ... ArrayLength)"
        message-en  = "Right border of the search ({0} ... ArrayLength)"
    />

    <message
        description = 'Comment for "Elements" parameter in the output file'
        param       = "ElementsComment"
        message-ru  = "Элементы массива ({0} ... {1})"
        message-en  = "Array elements ({0} ... {1})"
    />
    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />

    <styleset
        description = "Array style set"
        param       = "array"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "ffffff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Selected cell"
            fill-color      = "dddddd"
        />
        <style
            description     = "Local-minimum cell"
            fill-color      = "bbbbbb"
        />
        <style
            description     = "Minimum cell"
            fill-color      = "999999"
        />
    </styleset>

    <styleset
        description = "Brackets style set"
        param       = "brackets"
    >
        <style
            description     = "Ordinary bracket"
            text-color      = "000000"
            border-color    = "000000"
            fill-color      = "aaaaaa"
            text-align      = "0.5"
            border-status   = "true"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
			<font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Current bracket"
            fill-color      = "666666"
        />
    </styleset>

