    <styleset
        description = "Indices style"
        param       = "indices"
    >
        <style
            description     = "Ordinary"
            text-color      = "000000"
            border-color    = "000000"
            fill-color      = "aaaaaa"
            text-align      = "0.5"
            border-status   = "false"
            fill-status     = "false"
            aspect-status   = "false"
            padding         = "0.2"
        >
			<font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
    </styleset>

    <style
        description     = 'Style of the "Min" label'
        param           = "min-style"
        border-status   = "false"
        fill-status     = "false"
    >
        <font size="20"/>
    </style>

</configuration>
                                      
