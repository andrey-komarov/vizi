<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "40"
    />
    
	<button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Заполнить массив случайными значениями"
        hint-en     = "Fill the array with random values"
    />

	<adjustablePanel
	description = "Number of elements in the array"
        param           = "array-size"
        caption-ru      = "Размеры массива {0,number,####}"
        caption-en      = "Array size: {0,number,####}"
        hint-ru         = "Размер массива"
        hint-en         = "Array size"
        value           = "5"
        minimum         = "3"
        maximum         = "100"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "500"
        >

        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить размер матрицы"
            hint-en     = "Increase matrix size"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить размер матрицы"
            hint-en     = "Decrease matrix size"
        />
    </adjustablePanel>

        <adjustablePanel
        description     = "Left bound for minimum search"
        param           = "left-border"
        caption-ru      = "Левая граница {0,number,####}"
        caption-en      = "Left bound {0,number,####}"
        hint-ru         = "Левая граница поиска"
        hint-en         = "Left search bound"
	value		= "2"
        minimum         = "1"
        maximum         = "4"
        unitIncrement   = "1"
        blockIncrement  = "1"
        blockInterval   = "500"
        >

	<button
		param	= "decrementButton"
		caption-ru	 = "&lt;"
		caption-en	 = "&lt;"
		hint-ru	= "Сдвинуть границу влево"
		hint-en	= "Move bound left"
	/>

	<button
		param	= "incrementButton"
		caption-ru	= "&gt;"
		caption-en	= "&gt;"
		hint-ru	= "Сдвинуть границу вправо"
		hint-en	= "Move bound right"
	/>

	</adjustablePanel>

        <adjustablePanel
        decription      = "Right bound for minimum search"
        param           = "right-border"
        caption-ru      = "Правая граница {0,number,####}"
        caption-en      = "Right bound {0,number,####}"
        hint-ru         = "Правая граница поиска"
        hint-en         = "Right search bound"
	value		= "4"
        minimum         = "2"
        maximum         = "5"
        unitIncrement   = "1"
        blockIncrement  = "1"
        blockInterval   = "500"
        >

        <button
                param   = "decrementButton"
                caption-ru       = "&lt;"
                caption-en       = "&lt;"
                hint-ru = "Сдвинуть границу влево"
                hint-en = "Move bound left"
        />

        <button
                param   = "incrementButton"
                caption-ru      = "&gt;"
                caption-en      = "&gt;"
                hint-ru = "Сдвинуть границу вправо"
                hint-en = "Move bound right"
        />

        </adjustablePanel>

	<styleset
        description = "Array style set"
        param       = "linear-styleSet"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>

        <style
            description     = "Ordinal tree cell 1"
            fill-color      = "7777ff"
        >
        </style>

        <style
		description     = "Red cell cell 2"
		fill-color      = "ff7777"
        >
        </style>

	<style
		description	= "Green cell 3"
		fill-color	= "77ff77"
	>
	</style>

	<style
		description	= "Brown cell 4"
		fill-color	= "a08050"
	>
	</style>
	
	<style
		description	= "Blue cell 5"
		fill-color	= "00bfff"
	>
	</style>

    </styleset>

  <styleset
        description = "Line style set"
        param       = "line-styleSet"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "3"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>

	<style
		description = "ololo"
		fill-color	= "123456"
	>	
	</style>
	</styleset>
    
</configuration>
