<?xml version="1.0" encoding="WINDOWS-1251"?>

<!--
    "FindMaximum" visualizer configuration (example).
    Shared for FindMaximum.xml and FindMaximumAR.xml
    Version: $Id: FindMaximum-Configuration.xml,v 1.3 2004/03/23 16:39:34 geo Exp $
-->

<configuration>
    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "40"
    />
    
	<button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Заполнить массив случайными значениями"
        hint-en     = "Fill the array with random values"
    />

	<adjustablePanel
        description = "Number of elements in the array"
        param           = "matrix-size"
        caption-ru      = "Размеры матрицы {0,number,####}"
        caption-en      = "Matrix size: {0,number,####}"
        hint-ru         = "Размер матрицы"
        hint-en         = "Matrix size"
        value           = "3"
        minimum         = "3"
        maximum         = "7"
        unitIncrement   = "1"
        blockIncrement  = "2"
        blockInterval   = "500"
    >
        <button
            param       = "incrementButton"
            caption-ru  = "&gt;&gt;"
            caption-en  = "&gt;&gt;"
            hint-ru     = "Увеличить размер матрицы"
            hint-en     = "Increase matrix size"
        />
        <button
            param       = "decrementButton"
            caption-ru  = "&lt;&lt;"
            caption-en  = "&lt;&lt;"
            hint-ru     = "Уменьшить размер матрицы"
            hint-en     = "Decrease matrix size"
        />
    </adjustablePanel>

	<styleset
        description = "Matrix style set"
        param       = "matrix-styleSet"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Cell of checked row and unchecked column"
            fill-color      = "00ff80"
        />
        <style
            description     = "Local minimum cell"
            fill-color      = "ff8080"
        />
		<style
            description     = "Local minimum cell"
            fill-color      = "00ffff"
        />
    </styleset>

	<styleset
        description = "Array style set"
        param       = "linear-styleSet"
    >
        <style
            description     = "Ordinary cell"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "8080ff"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
    </styleset>

    
</configuration>
