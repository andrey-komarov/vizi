<?xml version="1.0" encoding="WINDOWS-1251"?>

<!--
    "FindMaximum" visualizer configuration (example).
    Shared for FindMaximum.xml and FindMaximumAR.xml
    Version: $Id: FindMaximum-Configuration.xml,v 1.2 2003/12/25 12:57:27 geo Exp $
-->

<configuration>

    <property 
        description = "Comment pane height"
        param       = "comment-height"
        value       = "40"
    />
    <property
        description = "minsize"
        param       = "minsize"
        value       = "5"
    />

    <property
        description = "maxsize"
        param       = "maxsize"
        value       = "8"
    />

    <property
        description = "Ratio of shift from borders to applet dimensions"
        param       = "shiftRatio"
        value       = "0.05"
    />

    <property
        description = "Ratio of maximum rectangles size to real size"
        param       = "fillRatio"
        value       = "0.9"
    />

    <property
        description = "Number of rows to layout edges list"
        param       = "rows"
        value       = "10" 
    />

    <property
        description = "Ratio of edges list width to applet width"
        param       = "ratio2"
        value       = "0.3"
    />
    <property
        description = "Maximum number of edges"
        param       = "maxEdges"
        value       = "20"
    />

    <message
        description     = "message for wrong data"
        param           = "wrongLoad-message"
        message-en      = " Line {0} : Duplicate edge {1} {2}"
        message-ru      = " Строка {0} : Двойное ребро {1} {2}"
    />

    <message
        description     = "vertex1 comment"
        param           = "v1-message"
        message-en      = "v1"
        message-ru      = "в1"
    /> 

    <message
        description     = "vertex2 comment"
        param           = "v2-message"
        message-en      = "v2"
        message-ru      = "в2"
    /> 

    <message
        description     = "weight comment"
        param           = "w-message"
        message-en      = "w"
        message-ru      = "вес"
    /> 



     <adjustablePanel
            description = "Number of vertexes"
            param           = "elements"
            caption-ru      = "Вершин: {0,number,####}"
            caption-en      = "Vertexes: {0,number,####}"
            hint-ru         = "Количество вершин"
            hint-en         = "Number of vertexes"
            value           = "5"
            minimum         = "5"
            maximum         = "8"
            unitIncrement   = "1"
            blockIncrement  = "2"
            blockInterval   = "500"
        >
            <button
                    param       = "incrementButton"
                    caption-ru  = "&gt;&gt;"
                    caption-en  = "&gt;&gt;"
                    hint-ru     = "Увеличить количество вершин"
                    hint-en     = "Increase number of vertexes"
            />
            <button
                    param       = "decrementButton"
                    caption-ru  = "&lt;&lt;"
                    caption-en  = "&lt;&lt;"
                    hint-ru     = "Уменьшить количество вершин"
                    hint-en     = "Decrease number of vertexes"
            />
        </adjustablePanel>

         <adjustablePanel
            description = "Number of edges"
            param           = "edges"
            caption-ru      = "Ребер: {0,number,####}"
            caption-en      = "Edges: {0,number,####}"
            hint-ru         = "Количество ребер"
            hint-en         = "Number of edges"
            value           = "4"
            minimum         = "4"
            maximum         = "20"
            unitIncrement   = "1"
            blockIncrement  = "2"
            blockInterval   = "500"
        >
            <button
                    param       = "incrementButton"
                    caption-ru  = "&gt;&gt;"
                    caption-en  = "&gt;&gt;"
                    hint-ru     = "Увеличить количество ребер"
                    hint-en     = "Increase number of edges"
            />
            <button
                    param       = "decrementButton"
                    caption-ru  = "&lt;&lt;"
                    caption-en  = "&lt;&lt;"
                    hint-ru     = "Уменьшить количество ребер"
                    hint-en     = "Decrease number of edges"
            />
        </adjustablePanel>
        
    <button
        description = "Fills the array with random values"
        param       = "button-random"
        caption-ru  = "Случайно"
        caption-en  = "Random"
        hint-ru     = "Создать случайный граф"
        hint-en     = "Create random graph"
    />

    <button
        description = "Switches to edit mode"   
        param       = "button-edit"
        caption-ru  = "Редактирование"
        caption-en  = "      Edit      "
        hint-ru     = "Переход в режим редактирования"
        hint-en     = "Switch to edit mode" 
    />

    <button
        description = "Switches to visualize mode"  
        param       = "button-vis"
        caption-ru  = "Визуализация"
        caption-en  = "Visualize"
        hint-ru     = "Переход в режим визуализации"
        hint-en     = "Switch to visualize mode"    
    />

    <message
        description = "Comment for VertexNumber parameter in the output file"
        param       = "VertexNumberComment"
        message-ru  = "Количество вершин ({0} ... {1})"
        message-en  = "Vertex Number ({0} ... {1})"
    />
    <message
        description = "Comment for EdgeNumber parameter"
        param       = "EdgeNumberComment"
        message-ru  = "Количество ребер ({0} .. {1})"
        message-en  = "Edges Number ({0} .. {1})"
    />
    <message
        description = 'Comment for "Elements" parameter in the output file'
        param       = "EdgesListComment"
        message-ru  = "Список ребер (в формате левый конец, правый конец ({0} .. {1}), вес ребра ({2} ... {3}) )"
        message-en  = "Edges list (left end , right end ({0} .. {1}), weight of edge ({2} .. {3}) )"
    />

    <message
        description = 'Comment for "Step" parameter in the output file'
        param       = "StepComment"
        message-ru  = "Номер шага"
        message-en  = "Current step"
    />
    <styleset
        description = "Vertexes style set"
        param       = "vertexesStyleSet"
    >
        <style
            description     = "Zero component style"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "eeeeee"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.5"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>    
    
        <style
            description     = "1 component style"
            fill-color      = "909090"
        />

        <style
            description     = "2 component style"
            fill-color      = "A0A0A0"
        />
        <style
            description     = "Edited vertex style"
            fill-color      = "C0C0C0"
        />
    </styleset>

     <styleset
        description = "Line style set"
        param       = "line"
    >
        <style
            description     = "Inactive edge"
            text-color      = "000000"
            text-align      = "0.5"
            border-color    = "000000"
            border-status   = "true"
            fill-color      = "eeeeee"
            fill-status     = "true"
            aspect-status   = "false"
            padding         = "0.2"
        >
            <font
                face        = "Serif"
                size        = "12"
                style       = "plain"
            />
        </style>
        <style
            description     = "Added edge"
            fill-color      = "555555"
            text-color      = "ffffff"
        />
        <style
            description     = "Not added edge"
            fill-color      = "cccccc"
        />
        <style
            description     = "Minimal edge"
            fill-color      = "cccccc"
        />
        <style
            description     = "Comments"
            fill-color      = "dddddd"
        />
    </styleset>


    <property
        description = "Maximum possible value of the element"
        param       = "max-value"
        value       = "20"
    />
    <property
        description = "Widest possible value of the element"
        param       = "max-value-string"
        value       = "88"
    />
    <group
        description = "Save/Load dialog configuration"
        param       = "SaveLoadDialog"
    >
        <property
            description = "Height of the comment pane"
            param       = "CommentPane-lines"
            value       = "2"
        />
        <property
            description = "Width of the text area"
            param       = "columns"
            value       = "60"
        />
        <property
            description = "Height of the text area"
            param       = "rows"
            value       = "15"
        />
    </group>
</configuration>
